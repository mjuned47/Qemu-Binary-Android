[host_machine]
system = 'linux'
cpu_family = 'aarch64'
cpu = 'aarch64'
endian = 'little'

[built-in options]
c_args = ['-I/data/data/com.termux/files/usr/include']
c_link_args = ['-L/data/data/com.termux/files/usr/lib', '-I/data/data/com.termux/files/usr/include']                                                              
cpp_link_args = ['-L/data/data/com.termux/files/usr/lib']
c_std = 'gnu11'
cpp_std = 'gnu++11'
pkg_config_path = ['/data/data/com.termux/files/usr/lib/pkgconfig', '/data/data/com.termux/files/usr/share/pkgconfig']
objcpp_link_args = ['-L/data/data/com.termux/files/usr/lib']

[binaries]
c = 'aarch64-linux-android-gcc'
cpp = 'aarch64-linux-android-g++'
ar = 'aarch64-linux-android-ar'
ld = 'aarch64-linux-android-ld'
objcopy = 'aarch64-linux-android-objcopy'
strip = 'aarch64-linux-android-strip'
pkgconfig = 'pkg-config'
										  
